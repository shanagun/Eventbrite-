<!-- S'INSCRIRE -->
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <h2 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :prenom %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "prÃ©nom", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :nom %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "nom", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_field :description, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>

         <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :mot_de_passe %>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :confirme_ton_mot_de_passe %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

          <div class="actions mt-5">
           <%= f.submit "Connexion", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <% end %>
        <br>
    <%= render "devise/shared/links" %>

  </div>
</div>
</div>
