<div class ='align-middle text-center'>
	<div class="card m-5 p-5" style="height:300px">
		<div class="card-body">

			<form action= "<%= events_path %>" method="POST">

				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

				<h3> Créé ton évènement !</h3>
				
				<div class="row justify-content-center">
					<p style = "width: 200px"> Titre : <input type="text" name="title"></p>
				</div>
				<div class="row justify-content-center">
				<p style = "width: 200px">Description : <input type="text" name="description"></p>
        </div>
        <div class="row justify-content-center">
        <p style = "width: 400px"> Start Date format : ('YYYY-MM-DD HH:mm:ss') <input style="width:400px; height:30px" type="datetime" name="start_date" value="<%= @event.start_date %>"></p>
        </div>
        <div class="row justify-content-center">
				<p style = "width: 200px">Durée : <input type="text" name="duration"></p>
        </div>
        <div class="row justify-content-center">
				<p style = "width: 200px">Prix : <input type="text" name="price"></p>
        </div>
        <div class="row justify-content-center">
				<p style = "width: 200px">Lieu : <input type="text" name="location"></p>
        </div>
			  <p><input type="submit" value="Valider"></p>
			</form>		
		</div>
	</div>
</div>

<% if @event.errors.any? %>
  <div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p>L'évènement n'a pas pu être créé</p>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
